{
  "version": "0.2.0",
  "configurations": [
    {
      "name": "unix - gui",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/deskflow",
      "preLaunchTask": "build-silent",
      "osx": {
        "program": "${workspaceFolder}/build/bin/Deskflow.app/Contents/MacOS/Deskflow"
      }
    },
    {
      "name": "unix - unittests",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/unittests",
      "args": [ "${input:gtest-args}" ],
      "preLaunchTask": "build-silent"
    },
    {
      "name": "unix - integtests",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/integtests",
      "args": [ "${input:gtest-args}" ],
      "preLaunchTask": "build-silent",
    },
    {
      "name": "unix - server",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/deskflow-core",
      "args": ["server", "--config-toml", "deskflow-config.toml"],
      "preLaunchTask": "build-silent",
      "osx": {
        "program": "${workspaceFolder}/build/bin/Deskflow.app/Contents/MacOS/deskflow-core"
      }
    },
    {
      "name": "unix - client",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/deskflow-core",
      "args": ["client", "--config-toml", "deskflow-config.toml"],
      "preLaunchTask": "build-silent",
      "osx": {
        "program": "${workspaceFolder}/build/bin/Deskflow.app/Contents/MacOS/deskflow-core"
      }
    },
    {
      "name": "unix - daemon",
      "type": "lldb",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin/deskflow-core",
      "args": ["daemon", "-f"],
      "preLaunchTask": "build-silent"
    },
    {
      "name": "unix - attach",
      "type": "lldb",
      "request": "attach",
      "pid": "${command:pickProcess}"
    },
    {
      "name": "windows - gui",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/deskflow",
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - unittests",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/unittests",
      "args": [ "${input:gtest-args}" ],
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - integtests",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/integtests",
      "args": [ "${input:gtest-args}" ],
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - server",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/deskflow-core",
      "args": ["server", "--config-toml", "deskflow-config.toml"],
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - client",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/deskflow-core",
      "args": ["client", "--config-toml", "deskflow-config.toml"],
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - daemon",
      "type": "cppvsdbg",
      "cwd": "${workspaceRoot}",
      "request": "launch",
      "program": "${workspaceFolder}/build/bin-copy/deskflow-core",
      "args": ["daemon", "-f"],
      "internalConsoleOptions": "openOnSessionStart",
      "preLaunchTask": "build-kill"
    },
    {
      "name": "windows - attach",
      "type": "cppvsdbg",
      "request": "attach",
      "processId": "${command:pickProcess}"
    },
    {
      "name": "install_deps.py",
      "type": "debugpy",
      "request": "launch",
      "program": "scripts/install_deps.py",
      "console": "integratedTerminal"
    }
  ],
  "inputs": [
    {
      "id": "gtest-args",
      "type": "promptString",
      "description": "Test arguments",
      "default": "--gtest_filter=*"
    }
  ]
}
